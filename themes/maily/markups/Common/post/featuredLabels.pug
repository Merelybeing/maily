//- Destaca etiquetas especificas
//- @author zkreations
//- @param {array} tags - Matriz de etiquetas
//- @param {string} [class] - Clases adicionales

b:includable(id="post:featuredLabels")
  b:if(cond='data:skin.vars.e_definedTags != false')
    b:tag.card-ftag.absolute.capitalize.fw-500.p-1.t-0.z-10(class='g-.5' name='div' cond='data:container ?: true')
      //- Agrega clases adicionales
      b:class(cond='data:class', expr:name='data:class')
      b:loop(values='data:skin.vars.e_definedTags != "" and data:skin.vars.e_definedTags != true ? data:tags where (t => t.name in data:skin.vars.e_definedTags) take 1 : data:tags.first', var='label')
        a(expr:class='"flex-none has-icon ftag ftag-" + data:label.name', expr:href='data:label.url')
          b:class(cond='(data:container ?: true) == false' name='capitalize')
          b:include(name='i:meteor' data='{ icon: "tag" }')
          | <data:label.name/>

